<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <handlers>
            <!-- Excluir /static/ de FastCGI - servir directamente -->
            <add name="StaticFiles" path="static/*" verb="GET,HEAD,POST,OPTIONS" modules="StaticFileModule" resourceType="Either" requireAccess="Read" />

            <add name="Python FastCGI" path="*" verb="*" modules="FastCgiModule" scriptProcessor="C:\Users\Administrator\AppData\Local\Programs\Python\Python314\python.exe|C:\Users\Administrator\AppData\Local\Programs\Python\Python314\Lib\site-packages\wfastcgi.py" resourceType="Unspecified" requireAccess="Script" />
        </handlers>

        <!-- Headers de seguridad y compatibilidad -->
        <httpProtocol>
            <customHeaders>
                <add name="X-Content-Type-Options" value="nosniff" />
                <add name="X-Frame-Options" value="SAMEORIGIN" />
            </customHeaders>
        </httpProtocol>

        <!-- Configuración de compresión -->
        <urlCompression doDynamicCompression="true" doStaticCompression="true" />

        <!-- Deshabilitar buffering de respuesta para mejor compatibilidad -->
        <httpErrors existingResponse="PassThrough" />




    </system.webServer>

    <appSettings>
        <add key="WSGI_HANDLER" value="wfastcgi_init.application" />
        <add key="PYTHONPATH" value="C:\Users\Administrator\Desktop\RS_project" />
        <add key="DJANGO_SETTINGS_MODULE" value="config.settings" />
        <add key="WSGI_LOG" value="C:\Users\Administrator\Desktop\RS_project\logs\wfastcgi.log" />
    </appSettings>
</configuration>
